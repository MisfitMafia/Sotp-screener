{
  "openapi": "3.0.1",
  "info": {
    "title": "Market Data API",
    "version": "1.0.0",
    "description": "Fetches equity quotes, option chains, and IV rank using Polygon"
  },
  "servers": [
    { "url": "https://YOUR_RENDER_APP.onrender.com" }
  ],
  "paths": {
    "/quote/{symbol}": {
      "get": {
        "summary": "Get equity quote",
        "parameters": [
          { "name": "symbol", "in": "path", "required": true, "schema": { "type": "string" } },
          {
            "name": "market",
            "in": "query",
            "required": false,
            "schema": { "type": "string", "default": "USA" }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/EquityQuote" }
              }
            }
          }
        }
      }
    },
    "/options": {
      "get": {
        "summary": "Get option chain",
        "parameters": [
          { "name": "symbol", "in": "query", "required": true, "schema": { "type": "string" } },
          {
            "name": "expiration",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "format": "date" }
          },
          {
            "name": "market",
            "in": "query",
            "required": false,
            "schema": { "type": "string", "default": "USA" }
          }
        ],
        "responses": {
          "200": {
            "description": "Option chain response",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/OptionChain" }
              }
            }
          }
        }
      }
    },
    "/iv-rank": {
      "get": {
        "summary": "Get IV rank",
        "parameters": [
          { "name": "symbol", "in": "query", "required": true, "schema": { "type": "string" } },
          {
            "name": "period",
            "in": "query",
            "required": false,
            "schema": { "type": "integer", "default": 252 }
          },
          {
            "name": "market",
            "in": "query",
            "required": false,
            "schema": { "type": "string", "default": "USA" }
          }
        ],
        "responses": {
          "200": {
            "description": "IV rank percentile",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/IVRank" }
              }
            }
          },
          "501": {
            "description": "Not implemented",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Error" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "EquityQuote": {
        "type": "object",
        "properties": {
          "symbol": { "type": "string" },
          "last": { "type": "number" },
          "bid": { "type": "number" },
          "ask": { "type": "number" },
          "timestamp": { "type": "integer" }
        }
      },
      "OptionContract": {
        "type": "object",
        "properties": {
          "symbol": { "type": "string" },
          "expiration": { "type": "string" },
          "strike": { "type": "number" },
          "type": { "type": "string", "enum": ["call", "put"] }
        }
      },
      "OptionChain": {
        "type": "object",
        "properties": {
          "symbol": { "type": "string" },
          "expiration": { "type": "string" },
          "contracts": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/OptionContract" }
          }
        }
      },
      "IVRank": {
        "type": "object",
        "properties": {
          "symbol": { "type": "string" },
          "iv_rank": { "type": "number" }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": { "type": "string" }
        }
      }
    }
  }
}
